# Hugging Face API key (optional but recommended for decent models)
HF_API_KEY=your_huggingface_api_token_here

# Model to use on HuggingFace Inference API (optional)
HF_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# Local fallback model name (if HF_API_KEY not provided and you have local models)
LOCAL_MODEL=gpt2

# SQLite DB path (optional)
PITCHPILOT_DB=pitchpilot.db
